<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="279dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/logovalle" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/uno"
                        android:scaleType="centerCrop"
                        android:onClick="irCalculo"
                        tools:src="@drawable/ic_launcher_foreground" />

                </FrameLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="39dp">

                <TextView
                    android:id="@+id/materia1"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:text="MATEMÁTICAS BÁSICAS"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/dos"
                        android:scaleType="centerCrop"
                        android:onClick="irIngenieria"
                        tools:src="@drawable/dos" />

                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </FrameLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/materia2"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:text="INTRODUCCIÓN A LA INGENIERÍA"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/tres"
                        android:scaleType="centerCrop"
                        android:onClick="irDeporte"
                        tools:src="@drawable/tres" />

                </FrameLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPORTE Y SALUD"

                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button"
                    android:layout_width="282dp"
                    android:layout_height="match_parent"
                    android:text="Recursos"
                    android:onClick="IrRecursos"/>

            </TableRow>
        </TableLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>